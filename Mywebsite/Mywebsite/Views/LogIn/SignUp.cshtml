@model USER_DETAIL.USER_MASTER
@{
    ViewBag.Title = "SignUp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("SignUpSubmit", "LogIn", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <table class="form-group">
        <tr class="col-md-10">
            <td>Email Id</td>
            <td>
                @Html.TextBoxFor(m => m.EMAIL_ID, new { @class = "form-control" })
            </td>
        </tr>

        <tr class="col-md-10">
            <td>Password</td>
            <td>
                @Html.PasswordFor(m => m.PASSWORD, new { @class = "form-control" })
            </td>
        </tr>
        <tr class="col-md-10">
            <td>Confirm Password</td>
            <td>
                @Html.PasswordFor(m => m.CONFIRM_PASSWORD, new { @class = "form-control" })
            </td>
        </tr>
        <tr class="col-md-10">
            <td>
                Mobile Number
            </td>
            <td>
                @Html.TextBoxFor(m => m.MOBILE_NUMBER, new { @class = "form-control" })
            </td>
        </tr>
    </table>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Register" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
